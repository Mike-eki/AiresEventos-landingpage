<section id="intro">
    <img src="images/intro-bg.webp" alt="Aires Salón">
    <article>
        <div class="half-circle left"></div>
        <hgroup>
            <p class="intro-title"><strong>En Aires Salón creamos experiencias únicas para cada celebración</strong></p>
            <p class="intro-description">Nuestro espacio versátil y cálido, junto a un servicio de excelencia, convierten tus momentos especiales en recuerdos inolvidables.</p>
        </hgroup>
        <div class="half-circle right"></div>
    </article>
</section>

<style>

  #intro {
    overflow: hidden;
  }
    hgroup {
        

        display: flex;
        flex-direction: column;
        gap: calc(var(--space) * 2);

        text-align: center;
    }
    hgroup > p {
        /* max-width: 80ch; */
        text-wrap: pretty;
        color: var(--desert-sand)
    }
    section {
        background-color: var(--light-beige);
    }
    img {
        display: block;
        max-width: 100%;
        width: 100%;
        height: 20rem;
        object-fit: cover;
    }

    article {
        padding-block: calc(var(--space) * 2);

        display: flex;
        justify-content: space-between;
        align-items: stretch;

        gap: calc(var(--space) * 2);
    }

    .half-circle {
        display: block;

        /* max-width: 100%; */
        width: 100%;
        
        outline: 4px solid var(--desert-sand);
    }
    .half-circle.left {
        border-radius: 0 100rem 100rem 0;
    }
    .half-circle.right {
        border-radius: 100rem 0 0 100rem;
    }

    strong {
        text-wrap: balance;

        --min-font-size: 1.2rem;
        --max-font-size: 1.6rem;
        --min-viewport: 375px;
        --max-viewport: 1400px;

        font-size: clamp(1.1rem, 0.9269rem + 0.7692vw, 1.6rem);
    }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Animaciones cuando la sección entra en vista
  document.addEventListener('DOMContentLoaded', () => {
    // Animar imagen
    gsap.from('#intro img', {
      scrollTrigger: {
        trigger: '#intro',
        start: 'top 80%',
      },
      opacity: 0,
      scale: 1.1,
      duration: 1.2,
      ease: 'power3.out'
    });
    
    // Animar texto principal
    gsap.from('.intro-title', {
      scrollTrigger: {
        trigger: '#intro',
        start: 'top 70%',
      },
      opacity: 0,
      y: 30,
      duration: 1,
      delay: 0.3,
      ease: 'power3.out'
    });
    
    // Animar descripción
    gsap.from('.intro-description', {
      scrollTrigger: {
        trigger: '#intro',
        start: 'top 70%',
      },
      opacity: 0,
      y: 30,
      duration: 1,
      delay: 0.5,
      ease: 'power3.out'
    });
    
    // Animar semicírculos
    gsap.from('.half-circle.left', {
      scrollTrigger: {
        trigger: '#intro',
        start: 'top 70%',
      },
      opacity: 0,
      x: -50,
      duration: 1,
      delay: 0.4,
      ease: 'power3.out'
    });
    
    gsap.from('.half-circle.right', {
      scrollTrigger: {
        trigger: '#intro',
        start: 'top 70%',
      },
      opacity: 0,
      x: 50,
      duration: 1,
      delay: 0.4,
      ease: 'power3.out'
    });
  });
</script>