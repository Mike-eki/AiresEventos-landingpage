        scroll-behavior: smooth;
    }

    * {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        box-sizing: border-box;
    }

    [id] {
        scroll-margin-top: 65px;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: var(--font-parkinsans), sans-serif;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    p {
        margin: 0;
        padding: 0;
    }

    /* Trim Font Parkinsans*/
