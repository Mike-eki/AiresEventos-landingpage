    html {
        scroll-behavior: smooth;
    }

    /* Mejorar el rendimiento de las animaciones */
    * {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: var(--font-parkinsans), sans-serif;
        height: 100%;
        overflow-x: hidden;
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    p {
        margin: 0;
        padding: 0;
    }

    /* Trim Font Parkinsans*/
    :is([class*="u-text-style-"], h1, h2, h3, h4, h5, h6, p, blockquote) {
        display: flow-root;
    }
    :is(
            [class*="u-text-style-"],
            h1,
            h2,
            h3,
            h4,
            h5,
            h6,
            p,
            blockquote
        )::before {
        content: "";
        display: table;
        margin-bottom: calc(-0.5lh + 0.35em);
    }
    :is(
            [class*="u-text-style-"],
            h1,
            h2,
            h3,
            h4,
            h5,
            h6,
            p,
            blockquote
        )::after {
        content: "";
        display: table;
        margin-bottom: calc(-0.5lh + 0.35em);
    }
</style>

