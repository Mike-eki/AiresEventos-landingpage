import AiresCatering from "../sections/AiresCatering.astro";
import Diferencial from "../sections/Diferencial.astro";
import Testimonios from "../sections/Testimonios.astro";
import Contacto from "../sections/Contacto.astro";
import Footer from "../sections/Footer.astro";
import WhatsAppFixed from "../components/WhatsAppFixed.astro";
import Loader from "../components/Loader.astro";

const imagenesIntro = [
    { src: "images/card-1.webp", alt: "Foto de decoración del salon" },
    { src: "images/card-2.webp", alt: "Foto de decoración del salon" },
    { src: "images/card-3.webp", alt: "Foto de decoración del salon" },
    { src: "images/card-4.webp", alt: "Foto de decoración del salon" },
    { src: "images/card-5.webp", alt: "Foto de decoración del salon" },
    { src: "images/card-6.webp", alt: "Foto de decoración del salon" },
    { src: "images/card-7.webp", alt: "Foto de decoración del salon" },
];

const imagenesTestimonios = [
    { src: "images/card-8.webp", alt: "Foto del salon de Aires Eventos" },
    { src: "images/card-9.webp", alt: "Foto de quinceañera" },
    { src: "images/card-10.webp", alt: "Foto del salon de Aires Eventos" },
    { src: "images/card-11.webp", alt: "Foto del DJ" },
    { src: "images/card-12.webp", alt: "Foto del salon de Aires Eventos" },
    { src: "images/card-13.webp", alt: "Foto de pareja en su boda" },
